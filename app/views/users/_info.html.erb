<h1>ユーザー詳細</h1>
<table>
    <tr>
        <th><%= attachment_image_tag user, :profile_image, size: "100x100", fallback: "no_image.jpg" %></th>
    </tr>
    <tr>
        <th>名前</th>
        <td><%= user.name %></td>
    </tr>
    <tr>
        <th>自己紹介</th>
        <td><%= user.introduction %></td>
    </tr>
    <% if current_user.following?(user) %>
    <tr>
        <th><%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: "btn btn-primary" %></th>
    <% else %>
        <th><%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-success" %></th>
    </tr>
    <% end %>
    <tr>
        <th><%= link_to '編集する', edit_user_path(user.id) %></th>
    </tr>
    
</table>