<div>
    <%= render 'users/info',user: @user %>
    <%= render 'books/new',book: @book %>
</div>

<h1>ユーザー一覧</h1>
<%= @users.each do |user| %>
<table>
    <tr>
        <th>画像</th>
        <td><%= attachment_image_tag user, :profile_image, size: "40x40", fallback: "no_image.jpg"%></td>
    </tr>
    <tr>
        <th>名前</th>
        <td><%= link_to user.name, user_path(user.id) %></td>
    </tr>
    <tr>
        <th>自己紹介</th>
        <td><%= user.introduction %></td>
    </tr>
</table>
<% end %>