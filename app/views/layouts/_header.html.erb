<%= form_with url: search_path, method: :get, local: true do |f| %>
    <%= f.text_field :text  %>
    <%= f.select :faculty, [["Book", "Book"], ["User", "User"]] %>
    <%= f.select :search, options_for_select(["部分一致"]) %>
    <%= f.submit "検索" %>
<% end %>
    