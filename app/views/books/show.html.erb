<div>
    <%= render "users/info",user: @user %>
    <%= render "books/new",book: @book_new %>
</div>
<h1>本の詳細</h1>
<table>
    <tr>
        <th>投稿者</th>
        <td><%= link_to @user.name, user_path(@user.id) %></td>
    </tr>
    <tr>
        <th>画像</th>
        <td><%= attachment_image_tag @book, :image, size: "40x40", fallback: "no_image.jpg" %></td>
    </tr>
    <tr>
        <th>タイトル</th>
        <td><%= @book.title %></td>
    </tr>
    <tr>
        <th>詳細</th>
        <td><%= @book.body %></td>
    </tr>
    <tr>
        <td class = "book_<%= @book.id %>">
            <%= render 'favorites', book: @book %>
        </td>
    </tr>
    <% if @user.id == current_user.id %>
    <tr>
        <th><%= link_to '編集する', edit_book_path %></th>
        <th><%= link_to '削除する', book_path(@book), method: :delete %></th>
    </tr>
    <% end %>
    <tr>
        <td>
            <p><%= link_to "#{@book.post_comments.count} コメント", book_path(@book.id) %></p>
        </td>
    </tr>
</table>
<div class="post_comment_<%= @book.id %>">
    <%= render 'post', book: @book, post_comment: @post_comment %>
</div>